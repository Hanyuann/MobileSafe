<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobilesafe="http://schemas.android.com/apk/res/cn.edu.sdu.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/TitleTheme"
        android:text="设置中心" />

    <cn.edu.sdu.mobilesafe.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desc_off="自动更新已关闭"
        mobilesafe:desc_on="自动更新已开启"
        mobilesafe:title="自动更新设置" />

    <cn.edu.sdu.mobilesafe.view.SettingItemView
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desc_off="归属地显示已关闭"
        mobilesafe:desc_on="归属地显示已开启"
        mobilesafe:title="电话归属地显示设置" />

    <cn.edu.sdu.mobilesafe.view.SettingClickItemView
        android:id="@+id/sciv_address_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <cn.edu.sdu.mobilesafe.view.SettingClickItemView
        android:id="@+id/sciv_address_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <cn.edu.sdu.mobilesafe.view.SettingItemView
        android:id="@+id/siv_callsafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desc_off="黑名单拦截已关闭"
        mobilesafe:desc_on="黑名单拦截已开启"
        mobilesafe:title="黑名单拦截设置" />

    <cn.edu.sdu.mobilesafe.view.SettingItemView
        android:id="@+id/siv_watch_dog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desc_off="看门狗已关闭"
        mobilesafe:desc_on="看门狗已开启"
        mobilesafe:title="看门狗设置" />

</LinearLayout>